extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 My Portfolio
      p.lead.text-light
        | Treehouse Full-Stack JavaScript Techdegree Projects.
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-3
      each project in projects
        .cell.proj
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.image_url[0]}`)
            h5(class="project-title") #{project.project_name}